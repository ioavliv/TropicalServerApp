@model TropicalServerApp.Models.Username
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TropicalServer</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/TropicalStyles/Login.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="page">
    <div id="container" class="container">
        <div>
            @Html.Partial("_Banner")

            <div>
                <div id="BodyDetail">
                    <label id="Loginlbl">FORGOT PASSWORD</label>
                    <form id="loginBox" action="SubmitUsername" method="post">
                        <div id="login">
                            <label id="usernamelbl">Enter Your Username: </label>
                            <input id="useridtextbox" name="CustomerId" type="text" />
                        </div>
                        <div id="errorBox">
                            <label id="errorlbl">@Html.ValidationMessageFor(x => x.CustomerId)@ViewData["Message"]</label>
                        </div>

                        <div id="submit">
                            <div id="rememberId">
                                @Html.ActionLink("Go back", "Login", "Login", null, new { id = "BackBtn" })
                            </div>

                            <input id="LoginBtn_1" type="submit" value="Send Email" />
                        </div>

</form>

                </div>
            </div>


        </div>
    </div>
</body>
</html>
